
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
             <img src="https://www.clipartmax.com/png/middle/140-1400974_taco-icon-png-download-cartoon-burger.png" alt="Taco Icon Png Download - Cartoon Burger@clipartmax.com" alt="burger icon"/>
            <h1 style="color:black; text-align: center">Eat-Da-Burger</h1>
             </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-center">
            <h2>Let's EAT!</h2>
             <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6 text-center">
     <h2>Devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

    <div class="row">
    <div class="col" align="center"><h2>Add Another Burger!</h2>
    <form id="create-form">

      <div class="form-group">
        <label for="bgr">Burger Type:</label>
        <input type="text" id="bgr" name="name">
      </div>

      <button class="btn" type="submit">Add A Burger</button>
    </form>
    </div>
  </div>
</div>
